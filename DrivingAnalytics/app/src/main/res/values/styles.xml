<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialogBtnStyle" parent="txt_14_medium_blue">
        <item name="android:background">@drawable/gray_effect_without_border_rounded_corner</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="txt_14_medium_blue" parent="text_14_medium">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="text_14_medium" parent="txt_medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txt_medium">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
